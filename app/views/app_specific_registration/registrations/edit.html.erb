<h2>Mise à jour du compte : </h2>
<h2><%= current_user.email%></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <%= f.input :productphoto, as: :attachinary, :label => 'Image d\'accueil', required: true, autofocus: true, hint: "Utilisez une image aux dimensions d'une photo standard" %>

    <%= f.input :avatarphoto, as: :attachinary, :label => 'Photo pour votre profil', required: true, autofocus: true, hint: "Utilisez une image aux dimensions carrées" %>

    <%= f.input :productphotomobile, as: :attachinary, :label => 'Image d\'accueil pour mobiles', required: true, autofocus: true, hint: "Utilisez une image 'verticale'" %>

    <%= f.input :lessonphoto, as: :attachinary, :label => 'Image pour les stages', required: true, autofocus: true, hint: "Utilisez une image aux dimensions d'une photo standard" %>

    <%= f.input :cityphoto, as: :attachinary, :label => 'Image pour votre ville', required: true, autofocus: true, hint: "Utilisez une image aux dimensions d'une photo standard" %>

    <%= f.input :logophoto, as: :attachinary, :label => 'Image pour votre logo', required: true, autofocus: true, hint: "Utilisez une image aux dimensions carrées" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Nous attendons la confirmation pour: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, :label => 'Mot de passe', autocomplete: "off", hint: "laissez vide si vous ne voulez pas le changer", required: false %>
    <%= f.input :password_confirmation, :label => 'Confirmation mot de passe', required: false %>
    <%= f.input :current_password, hint: "nous avons besoin de votre mot de passe pour confirmer vos changements", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Mise à jour", class: "btn btn-primary" %>
  </div>
<% end %>
