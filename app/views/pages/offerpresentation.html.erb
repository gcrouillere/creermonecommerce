<% content_for(:description) do %>
Nous créons des boutiques en ligne pour des artisans. Grâce à notre application vous pouvez configurez votre projet de boutique en quelques clics.
<% end %>
<% content_for(:title_tag) do %>
Créez une boutique en ligne. Testez votre projet en quelques clics.
<% end %>

<div class="offer-container">
  <div class="box hidden-xs hidden-sm">
    <span class="box1"></span>
    <span class="box2"></span>
  </div>
  <div class="container container-user-show">
    <div class="row">

<!-- LAPTOP -->
        <div class="hidden-xs hidden-sm col-md-12">
        <h1>Vendez vos créations en ligne</h1>
        <h2>Créez une boutique avec notre agence</h2>
          <div class="offer-cards">
            <%= link_to ceramiques_path, title: "Visualisez les produits de démonstration de la boutique en ligne" do %>
              <div class="produit card-offer">
                <h2>Vendez vos produits</h2>
                <div class="card-separator">
                  <%= image_tag 'commerce.png', class: "offer-card-image", alt: "Chariot représentant la fonction de vente de la boutique en ligne"%>
                  <hr>
                </div>
                <p>Créez vos fiches produits</p>
                <p>Gérez vos stocks</p>
                <p>Visualisez vos commandes</p>
              </div>
            <% end %>
            <%= link_to new_lesson_path, title: "Offrez une prise de réservations pour des stages dans votre boutique en ligne" do %>
              <div class="stage-info card-offer">
                <h2>Accueillez vos clients</h2>
                <div class="card-separator">
                  <%= image_tag 'time.png', class: "offer-card-image", alt: "Calendrier représentant la possibilité de réserver des stages via la boutique"%>
                  <hr>
                </div>
                <p>Proposez des stages/visites</p>
                <p>Gérez votre calendrier</p>
                <p>Visualisez les réservations</p>
              </div>
            <% end %>
            <%= link_to info_path, title: "Vos informations personnelles visibles par les clients de votre e-commerce" do %>
              <div class="ecrire card-offer">
                <h2>Partagez</h2>
                <div class="card-separator">
                  <%= image_tag 'website.png', class: "offer-card-image", alt: "Page internet avec infos personnalisables"%>
                  <hr>
                </div>
                <p>Ecrivez sur votre métier</p>
                <p>Partagez votre technique</p>
                <p>Popularisez votre boutique</p>
              </div>
            <% end %>
          </div>
          <div class="offer-buttons">
            <%= link_to home_path, title: "Visualisez la page d'accueil de votre commerce en ligne" do %>
              <button type="submit" class="pull-right btn explore">DEMO D'UNE BOUTIQUE</button>
            <% end %>
            <% if user_signed_in? %>
            <%= link_to user_path(current_user), title: "Accédez à votre compte pour paramétrer la boutique en ligne" do %>
                <button type="submit" class="pull-right btn compte">CREEZ VOTRE PROJET DE BOUTIQUE EN 3 CLICS</button>
              <% end %>
            <% else %>
              <%= link_to new_user_registration_path, title: "Créez un compte pour paramétrer la démonstration de boutique en ligne" do %>
                <button type="submit" class="pull-right btn compte">CREEZ VOTRE PROJET DE BOUTIQUE EN 3 CLICS</button>
              <% end %>
            <% end %>
          </div>
        </div>

    </div>
  </div>

<!-- MOBILE -->
